FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// application     simpleFoam;
application     pimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         1;

deltaT          1e-8;

// writeControl    timeStep;
writeControl    runTime;

writeInterval   1e-4;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

adjustableRunTime   true;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           5.0;

maxDeltaT       $writeInterval;

// cacheTemporaryObjects
// (
//     kEpsilon:G
// );

functions
{
//     #includeFunc streamlinesLine
//     (
//         funcName=streamlines,
//         start=(-0.0205 0.001 0.00001),
//         end=(-0.0205 0.0251 0.00001),
//         nPoints=10,
//         fields=(p k U)
//     )
//
//     #includeFunc writeObjects(kEpsilon:G)
    #includeFunc yPlus;
    #includeFunc residuals(fields=(p U));
    #includeFunc patchAverage(patch=ent, fields=(p))
    #includeFunc patchAverage(patch=out, fields=(p))
    #includeFunc forcesIncompressible
    (
        patches=(wall_f wall_b defaultFaces),
        rhoInf=1000,
        CofR=(0 0 0),
        pitchAxis=(1 0 0)
    )
}

